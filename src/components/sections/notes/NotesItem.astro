---
const { note, isFirst } = Astro.props;

---

<a href={`/notes/${note.slug}`} class="block">
    <div class="group flex flex-col md:flex-row items-start bg-background p-5 rounded-lg shadow-md
        border border-default hover:shadow-lg transition-shadow">
        <div class="flex-1 pr-3">
            <h2 class="text-2xl font-semibold group-hover:text-primary transition-colors pt-1">
                {note.data.title}
            </h2>
            <time datetime={note.datetime} class="block mt-3 text-sm text-offset">
              {new Date(note.data.datetime).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            <p class="text-offset mt-4 line-clamp-2">{note.data.description}</p>
        </div>
        {note.data.image && (
            <div class="block w-full md:w-1/4 rounded-lg mt-4 lg:mt-1">
                <img src=`/note/${note.data.image}` alt={note.data.title}
                    loading={isFirst ? "eager" : "lazy"} 
                    class="w-full lg:h-auto object-cover object-center rounded-lg
                        md:group-hover:scale-105 transition-transform duration-300" />
            </div>
        )}
    </div>
</a>
